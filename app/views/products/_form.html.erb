<div class="row">
  <div class="col-md-6 col-md-12">
    <div class="card formCard mt-5 mb-2">
      <%= simple_form_for(@product, local: true)  do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h3>

          <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group col-md-12">     
        <b><%= form.label :title, :class => "col-sm-5 product-label"%></b>
        <%= form.text_field :title, :class => "col-sm-6 product-input" %>
      </div>  

      <div class="form-group col-md-12">  
      <span class="align-top"><b><%= form.label :description, â€‹id: :product_description, :class => "col-sm-5 product-label "%></b></span> 
       
       <%= form.text_area :description, id: :product_description, rows: 10, cols:60, :class => "col-sm-6 product-input"  %>
      </div>

      <% if product.image.attached? %>
        <div class="form-group col-md-12 my-5 formImageDiv">
          <%= image_tag product.image, style: " width:200px; display: block" %>
          <%#= image_pack_tag product.image, style: " width:200px; display: block" %>
        </div>
      <% end %>
      <div class="form-group col-md-12 my-5 "> 
        <b><%= form.label :image, :class => "col-sm-5 product-label"%></b>
        <%= form.file_field :image, id: :product_image , :class => "col-sm-6 product-input" %>
      </div>

      <div class="form-group col-md-12">   
        <b><%= form.label :price, :class => "col-sm-5 product-label"%></b>
        <%= form.text_field :price, id: :product_price, :class => "col-sm-6 product-input"  %>
      </div>

      <div class="form-group col-md-12">   
        <b><%= form.label :available, :class => "col-sm-5 product-label"%></b>
        <%= form.text_field :available, id: :product_available, :class => "col-sm-6 product-input"   %>
      </div>

      <div class="form-group col-md-12">   
        <b><%= form.label :stock_quantity, :class => "col-sm-5 product-label"%></b>
        <%= form.number_field :stock_quantity, id: :product_stock_quantity, :class => "col-sm-6 product-input"   %>
      </div>

      <div class="actions mt-5 buttonProduct ">
        <%= form.button :submit, class: 'buttonSubmit' %>
      </div>
    <% end %>
    </div>
  </div>
</div>





