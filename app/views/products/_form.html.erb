<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
<div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, ​id: :product_title​ %>
  </div>

  <div class="field">
    <%= form.label :description, ​id: :product_description %>
    
    <%= form.text_area :description, id: :product_description, rows: 10, cols:60 %>
  </div>

  <div class="field">
    <% if product.image.attached? %>
      <%= image_tag product.image, style: " width:200px; display: block" %>
      <%#= image_pack_tag product.image, style: " width:200px; display: block" %>
    <% end %>
    <%= form.label :image %>
    <%= form.file_field :image, id: :product_image %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :product_price %>
  </div>

  <div class="field">
    <%= form.label :available %>
    <%= form.text_field :available, id: :product_available  %>
  </div>

  <div class="field">
    <%= form.label :stock_quantity %>
    <%= form.number_field :stock_quantity, id: :product_stock_quantity  %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



